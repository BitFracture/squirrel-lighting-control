<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.squirrels.lightingcontroller.MainActivity">

    <TableRow
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_row="0"
        android:layout_column="0" >
        <Button
            android:text="Turn On"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/btnIsOn"
            android:layout_column="0"
            android:enabled="false" />
        <TextView
            android:id="@+id/connectionStatus"
            android:text="Not connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_column="1" />

    </TableRow>

    <ImageView
        android:id="@+id/colorSelection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_row="1"
        android:layout_column="0" />

    <TableRow
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_row="2"
        android:layout_column="0" >
        <TextView
            android:text="Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:minWidth="50dp" />
        <SeekBar
            android:id="@+id/redLevel"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="0"
            android:layout_alignParentStart="true"
            android:layout_column="1"
            android:layout_marginBottom="5dp" />
        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="0"
            android:layout_alignParentStart="true"
            android:layout_column="1"
            android:layout_marginBottom="5dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_row="3"
        android:layout_column="0" >
        <TextView
            android:text="Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:minWidth="50dp" />
        <SeekBar
            android:id="@+id/greenLevel"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="0"
            android:layout_alignParentStart="true"
            android:layout_column="1"
            android:layout_marginBottom="5dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_row="4"
        android:layout_column="0" >
        <TextView
            android:text="Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:minWidth="50dp" />

        <SeekBar
            android:id="@+id/blueLevel"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="0"
            android:layout_alignParentStart="true"
            android:layout_column="1"
            android:layout_marginBottom="5dp" />
    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="5"
        android:layout_column="0"  />

    <Button
        android:text="Temp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tmpAutoIsEnabled"
        android:layout_row="0"
        android:layout_column="6"
        android:enabled="true" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_row="7"
        android:layout_column="0" >
        <TextView
            android:text="Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:minWidth="50dp" />

        <SeekBar
            android:id="@+id/tempLevel"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="0"
            android:layout_alignParentStart="true"
            android:layout_column="1"
            android:layout_marginBottom="5dp" />
    </TableRow>

    <TextView
        android:text="console"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLog"
        android:layout_alignParentBottom="true"
        android:layout_row="9"
        android:layout_column="0" />
</GridLayout>
